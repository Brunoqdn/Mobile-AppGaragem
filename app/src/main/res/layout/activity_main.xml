<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="396dp"
        android:layout_height="486dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Kombi"
                style="@style/Button1"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/kombi"
                android:drawablePadding="60dp"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="Kombi"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/aggc" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Celta"
                style="@style/Button1"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/celta"
                android:drawablePadding="60dp"
                android:paddingStart="15dp"
                android:paddingEnd="8dp"
                android:text="Celta"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargo_munck" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Polo"
                style="@style/Button1"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/polo"
                android:drawablePadding="60dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Polo"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/celta" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Fiesta"
                style="@style/Button1"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/fiesta"
                android:drawablePadding="60dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Fiesta"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doblo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Doblo"
                style="@style/Button1"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/doblo"
                android:drawablePadding="60dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="DoblÃ´"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kombi_irl" />


        </LinearLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/diploma"
        android:layout_width="131dp"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.84"
        app:srcCompat="@drawable/mot" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viaturas"
        android:textAlignment="center"
        android:textColor="#2F2E2E"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Escala"
        style="@style/Button1"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:text="Escala"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/diploma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>